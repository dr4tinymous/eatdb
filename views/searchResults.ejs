<!DOCTYPE html>
<html>
<%- include('partials/head') %>
<body>
    <h1>"<%= searchQuery %>"</h1>

    <h2>Recipes</h2>
    <ul class="list-container">
        <% if (recipes && recipes.length > 0) { %>
            <% recipes.forEach(recipe => { %>
                <% if (recipe.id && recipe.title) { %>
                    <li><a href="/recipes/<%= recipe.id %>"><%= recipe.title %></a></li>
                <% } %>
            <% }); %>
        <% } else { %>
            <li>No recipes found.</li>
        <% } %>
    </ul>

    <h2>Ingredients</h2>
    <ul class="list-container">
        <% if (ingredients && ingredients.length > 0) { %>
            <% ingredients.forEach(ingredient => { %>
                <% if (ingredient.id && ingredient.name) { %>
                    <li><a href="/ingredients/<%= ingredient.id %>"><%= ingredient.name %></a></li>
                <% } %>
            <% }); %>
        <% } else { %>
            <li>No ingredients found.</li>
        <% } %>
    </ul>

   <h2>Styles</h2>
<ul class="list-container">
    <% if (styles && styles.length > 0) { %>
        <% styles.forEach(style => { %>
            <li><a href="/styles/<%= style.id %>"><%= style.name %></a></li>
        <% }); %>
    <% } else { %>
        <li>No styles found.</li>
    <% } %>
</ul>
 
    <h2>Equipment</h2>
<ul class="list-container">
    <% if (equipment && equipment.length > 0) { %>
        <% equipment.forEach(equip => { %>
            <li><a href="/equipment/<%= equip.id %>"><%= equip.name %></a></li>
        <% }); %>
    <% } else { %>
        <li>No equipment found.</li>
    <% } %>
</ul>
    
    <%- include('partials/footer') %>
</body>
</html>
